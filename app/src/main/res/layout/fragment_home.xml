<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addDeviceBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#126A9B"
        android:clickable="true"
        android:src="@drawable/icon_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/firstGridBtn"
        android:layout_width="147dp"
        android:layout_height="78dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="#126A9B"
        android:drawableLeft="@drawable/icon_bathroom"
        android:text="Button"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/secondGridBtn"
        android:layout_width="147dp"
        android:layout_height="78dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#126A9B"
        android:drawableLeft="@drawable/icon_bathroom"
        android:text="Button"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/thirdGridBtn"
        android:layout_width="147dp"
        android:layout_height="78dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="132dp"
        android:backgroundTint="#126A9B"
        android:drawableLeft="@drawable/icon_bathroom"
        android:text="Button"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstGridBtn" />

    <Button
        android:id="@+id/fourthGridBtn"
        android:layout_width="147dp"
        android:layout_height="78dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#126A9B"
        android:drawableLeft="@drawable/icon_bathroom"
        android:text="Button"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondGridBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>