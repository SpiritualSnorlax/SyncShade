<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addDeviceBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#126A9B"
        android:clickable="true"
        android:src="@drawable/icon_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/firstGridBtn"
        android:layout_width="184dp"
        android:layout_height="146dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="216dp"
        android:backgroundTint="#126A9B"
        android:drawableLeft="@drawable/icon_bathroom"
        android:paddingBottom="40dp"
        android:text="Button"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/secondGridBtn"
        android:layout_width="184dp"
        android:layout_height="146dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#126A9B"
        android:drawableLeft="@drawable/icon_bathroom"
        android:paddingBottom="40dp"
        android:text="Button"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/thirdGridBtn"
        android:layout_width="184dp"
        android:layout_height="146dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="132dp"
        android:backgroundTint="#126A9B"
        android:drawableLeft="@drawable/icon_bathroom"
        android:paddingBottom="40dp"
        android:text="Button"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstGridBtn" />

    <Button
        android:id="@+id/fourthGridBtn"
        android:layout_width="184dp"
        android:layout_height="146dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#126A9B"
        android:drawableLeft="@drawable/icon_bathroom"
        android:paddingBottom="40dp"
        android:text="Button"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondGridBtn" />

    <TextView
        android:id="@+id/firstPositionIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="92dp"
        android:text="Position: Closed"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/firstGridBtn"
        app:layout_constraintTop_toTopOf="@+id/firstGridBtn" />

    <TextView
        android:id="@+id/secondPositionIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="92dp"
        android:text="Position: Closed"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/secondGridBtn"
        app:layout_constraintTop_toTopOf="@+id/secondGridBtn" />

    <TextView
        android:id="@+id/thirdPositionIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="92dp"
        android:text="Position: Closed"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/thirdGridBtn"
        app:layout_constraintTop_toTopOf="@+id/thirdGridBtn" />

    <TextView
        android:id="@+id/fourthPositionIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="92dp"
        android:text="Position: Closed"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/fourthGridBtn"
        app:layout_constraintTop_toTopOf="@+id/fourthGridBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>