<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addScheduleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#126A9B"
        android:clickable="true"
        android:src="@drawable/icon_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/scheduleScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:fontFamily="sans-serif"
        android:text="Schedule Screen"
        android:textStyle="bold"
        android:textColor="@color/THEMECOLOR"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/firstScheduleBtn"
        android:layout_width="381dp"
        android:layout_height="102dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button_background"
        android:text="0:00 a.m."
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.222" />

    <Switch
        android:id="@+id/firstScheduleSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:theme="@style/mySwitch"
        app:layout_constraintBottom_toBottomOf="@+id/firstScheduleBtn"
        app:layout_constraintEnd_toEndOf="@+id/firstScheduleBtn"
        app:layout_constraintTop_toTopOf="@+id/firstScheduleBtn" />

    <TextView
        android:id="@+id/daysOfWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S M T W T F S"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/firstScheduleBtn"
        app:layout_constraintEnd_toStartOf="@+id/firstScheduleSwitch"
        app:layout_constraintTop_toTopOf="@+id/firstScheduleBtn" />

    <Button
        android:id="@+id/secondScheduleBtn"
        android:layout_width="381dp"
        android:layout_height="102dp"
        android:background="@drawable/rounded_button_background"
        android:text="0:00 a.m."
        android:textAlignment="viewStart"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.426" />

    <Switch
        android:id="@+id/secondScheduleSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S M T W T F S"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/secondScheduleBtn"
        app:layout_constraintEnd_toEndOf="@+id/secondScheduleBtn"
        app:layout_constraintTop_toTopOf="@+id/secondScheduleBtn"
        app:layout_constraintVertical_bias="0.527" />

    <Button
        android:id="@+id/thirdScheduleBtn"
        android:layout_width="381dp"
        android:layout_height="102dp"
        android:background="@drawable/rounded_button_background"
        android:text="0:00 a.m."
        android:textAlignment="viewStart"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.617" />

    <Switch
        android:id="@+id/thirdScheduleSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S M T W T F S"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/thirdScheduleBtn"
        app:layout_constraintEnd_toEndOf="@+id/thirdScheduleBtn"
        app:layout_constraintTop_toTopOf="@+id/thirdScheduleBtn"
        app:layout_constraintVertical_bias="0.527" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Command:"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/firstScheduleBtn"
        app:layout_constraintStart_toStartOf="@+id/firstScheduleBtn"
        app:layout_constraintTop_toTopOf="@+id/firstScheduleBtn"
        app:layout_constraintVertical_bias="0.879" />


</androidx.constraintlayout.widget.ConstraintLayout>